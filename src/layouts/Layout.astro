---
import "../styles/global.css";
import "@fontsource/noto-sans-sora-sompeng";
import siteConfig from "../config/siteConfig.json";
import Schema from "../components/Schema.astro";

const metadata = siteConfig[0].matadata;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <!-- Meta Pixel Code -->
    <script is:inline type="text/partytown">
      !(function (f, b, e, v, n, t, s) {
        if (f.fbq) return;
        n = f.fbq = function () {
          n.callMethod
            ? n.callMethod.apply(n, arguments)
            : n.queue.push(arguments);
        };
        if (!f._fbq) f._fbq = n;
        n.push = n;
        n.loaded = !0;
        n.version = "2.0";
        n.queue = [];
        t = b.createElement(e);
        t.async = !0;
        t.src = v;
        s = b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t, s);
      })(
        window,
        document,
        "script",
        "https://connect.facebook.net/en_US/fbevents.js",
      );
      fbq("init", "2331356017344307");
      fbq("track", "PageView");
    </script>
    <noscript
      ><img
        height="1"
        width="1"
        style="display:none"
        src="https://www.facebook.com/tr?id=2331356017344307&ev=PageView&noscript=1"
      /></noscript
    >
    <!-- End Meta Pixel Code -->
    <!-- Google tag (gtag.js) -->
    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-7VR6ZECS5V"
      type="text/partytown"></script>
    <script is:inline type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-7VR6ZECS5V");
    </script>
    <Schema />
    <title>{metadata.title}</title>
  </head>
  <body class="w-full h-screen">
    <slot />
  </body>
</html>

<style>
  body {
    font-family: "Noto Sans Sora Sompeng";
  }
</style>
