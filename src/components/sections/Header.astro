---
import { Image } from "astro:assets";
import Icon from "../../../public/images/icon-mozelli-marketing.svg";
import WhatsAppLogo from "phosphor-astro/WhatsappLogo.astro";
import Container from "../ui/layouts/Container.astro";
---

<Container>
  <header class="h-24 p-3 w-full">
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Service",
        "serviceType": "Criação de Sites e Landing Pages",
        "provider": {
          "@type": "Organization",
          "name": "Mozelli Marketing",
          "url": "https://mozellimarketing.com.br",
          "logo": "https://mozellimarketing.com.br/logo.png"
        },
        "areaServed": {
          "@type": "Country",
          "name": "Brasil"
        },
        "description": "Desenvolvimento de Sites profissionais e Landing Pages de alta conversão focadas em SEO e performance.",
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "4.9",
          "reviewCount": "45",
          "bestRating": "5",
          "worstRating": "1"
        },
        "hasOfferCatalog": {
          "@type": "OfferCatalog",
          "name": "Serviços de Desenvolvimento",
          "itemListElement": [
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Criação de Sites Institucionais"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Criação de Landing Pages"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Gestão de Tráfego"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Otimização de SEO"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Criação de Identidade Visual"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Gestão de Redes Sociais"
              }
            }
          ]
        }
      }
    </script>
    <nav class="flex items-center justify-between pt-3">
      <div class="flex items-center">
        <a href="">
          <Image
            src={Icon}
            class="w-10 pr-2"
            alt="Um funil, ícone da Mozelli Marketing."
            loading="eager"
            format="webp"
            quality="mid"
          />
        </a>
        <a
          href="https://mozellimarketing.com.br"
          title="Home page"
          class="text-primary"
        >
          <h1 class="flex flex-col md:hidden font-bold logo text-lg">
            Mozelli Marketing <br /><span class="text-muted-foreground text-xs"
              >Criação de Sites em <br />Belo Horizonte</span
            >
          </h1>
          <h1 class="hidden md:flex md:flex-col font-bold logo text-xl">
            Mozelli Marketing <br /><span class="text-muted-foreground text-xs"
              >Criação de Sites em Belo Horizonte</span
            >
          </h1>
        </a>
      </div>

      <a
        href="https://wa.me/5531998855602?text=Ol%C3%A1%2C%20vi%20o%20seu%20site%20e%20gostaria%20de%20mais%20informa%C3%A7%C3%B5es."
        target="_blank"
        title="Chamar no WhatsApp"
        class="rounded-full p-2 bg-lime-600 md:bg-primary md:font-bold md:px-3 text-primary-foreground hover:cursor-pointer md:rounded-sm"
      >
        <WhatsAppLogo class="w-8 h-auto md:hidden" />
        <span class="hidden md:block">Fale Conosco</span>
      </a>
    </nav>
  </header>
</Container>

<style>
  h1 {
    font-family: "Conthrax";
  }
</style>
