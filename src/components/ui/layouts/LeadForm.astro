---
import siteConfig from "../../../config/siteConfig.json";

const metadata = "LEAD-FORM," + siteConfig[0].matadata.url;
//for√ßa um novo deploy
---

<form
  action="/api/contact"
  method="POST"
  class="bg-primary rounded-md p-9"
  id="lead-form"
>
  <div class="hidden" aria-hidden="true">
    <input type="text" name="_honey" tabindex="-1" autocomplete="off" />
  </div>
  <input type="hidden" name="metadata" value={metadata} />

  <h3 class="text-xl font-bold">Solicite um Or√ßamento Gratuito!</h3>
  <p id="form-message" class="text-sm pt-2"></p>
  <div class="flex flex-col">
    <div class="py-2 flex flex-col">
      <label for="name" class="text-sm font-medium text-primary-foreground"
        >Seu nome <span>*</span></label
      >
      <input
        type="text"
        id="name"
        name="name"
        class="text-sm rounded-sm border-none p-2 focus:ring-2 focus:ring-accent outline-none bg-background text-foreground"
        required
      />
    </div>
    <div class="py-2 flex flex-col">
      <label for="email" class="text-sm font-medium text-primary-foreground"
        >Seu melhor e-mail <span>*</span></label
      >
      <input
        type="email"
        id="email"
        name="email"
        placeholder="email@dominio.com.br"
        class="text-sm rounded-sm border-none p-2 focus:ring-2 focus:ring-accent outline-none bg-background text-foreground"
        required
      />
    </div>
    <div class="py-2 flex gap-2">
      <div class="flex flex-col">
        <label for="ddd" class="text-sm font-medium text-primary-foreground"
          >DDD<span>*</span></label
        >
        <input
          type="text"
          id="ddd"
          name="ddd"
          maxlength="2"
          placeholder="99"
          class="rounded-sm w-full max-w-12 text-center border-none p-2 focus:ring-2 focus:ring-accent outline-none bg-background text-foreground text-sm"
          required
          inputmode="numeric"
          pattern="[0-9]{2}"
        />
      </div>
      <div class="flex flex-col">
        <label
          for="whatsapp"
          class="text-sm font-medium text-primary-foreground"
          >WhatsApp <span>*</span></label
        >
        <input
          type="text"
          name="whatsapp"
          id="whatsapp"
          placeholder="99999-9999"
          class="rounded-sm border-none p-2 focus:ring-2 focus:ring-accent outline-none bg-background text-foreground text-sm"
          required
          maxlength="10"
          inputmode="numeric"
        />
      </div>
    </div>
  </div>
  <div class="py-2 flex flex-col">
    <label for="business" class="text-sm font-medium text-primary-foreground"
      >Ramo de atividade <span>*</span></label
    >
    <select
      name="business"
      id="business"
      name="business"
      class="mt-1 rounded-sm border-none p-2 text-black focus:ring-2 focus:ring-accent outline-none appearance-none bg-white text-sm"
      required
    >
      <option value="" disabled selected>Selecione</option>
      <option value="SAUDE-E-BEM-ESTAR">Sa√∫de e Bem-Estar</option>
      <option value="CONSTRUCAO-E-REFORMAS">Constru√ß√£o e Reformas</option>
      <option value="COMERCIO">Com√©rcio</option>
      <option value="ALIMENTACAO">Alimenta√ß√£o</option>
      <option value="AUTOMOTIVO">Automotivo</option>
      <option value="BELEZA">Beleza</option>
      <option value="EDUCACAO">Educa√ß√£o</option>
      <option value="HOSPEDAGEM-E-TURISMO">Turismo e Hospedagem</option>
      <option value="INDUSTRIA">Ind√∫stria</option>
      <option value="TECNOLOGIA">Tecnologia</option>
      <option value="EVENTOS">Eventos</option>
      <option value="PROFISSIONAL-LIBERAL">Profissional Liberal</option>
      <option value="OUTROS">Outros</option>
    </select>
  </div>

  <div class="py-2 flex flex-col">
    <button
      type="submit"
      id="submit-btn"
      class="uppercase hover:cursor-pointer bg-accent/80 hover:bg-accent transition-all text-accent-foreground text-sm font-bold px-5 py-3 rounded-sm shadow-secondary-foreground shadow-md"
      >Solicitar Or√ßamento gratuito</button
    >
  </div>
</form>

<script>
  import { LeadSchema } from "../../../lib/validation/lead-schema";

  const form = document.getElementById("lead-form") as HTMLFormElement;
  const btn = document.getElementById("submit-btn") as HTMLButtonElement;
  const whatsappInput = document.getElementById("whatsapp") as HTMLInputElement;
  const dddInput = document.getElementById("ddd") as HTMLInputElement;

  // 1. M√ÅSCARA VISUAL (Aplica o tra√ßo enquanto o usu√°rio digita)
  whatsappInput?.addEventListener("input", () => {
    let value = whatsappInput.value.replace(/\D/g, ""); // Remove tudo que n√£o √© n√∫mero
    if (value.length > 5) {
      value = value.replace(/^(\d{5})(\d)/, "$1-$2"); // Adiciona o h√≠fen ap√≥s o 5¬∫ d√≠gito
    }
    whatsappInput.value = value;
  });

  // Limita DDD apenas a n√∫meros
  dddInput?.addEventListener("input", () => {
    dddInput.value = dddInput.value.replace(/\D/g, "");
  });

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    // Feedback visual de carregamento
    btn.disabled = true;
    btn.innerText = "Enviando...";

    // 1. Coleta e Limpeza dos dados
    const formData = new FormData(form);
    const rawData = Object.fromEntries(formData);

    const dataToValidate = {
      ...rawData,
      whatsapp: whatsappInput.value.replace(/\D/g, ""), // Limpa tra√ßos para o Zod
      ddd: dddInput.value.replace(/\D/g, ""),
    };

    // 2. Valida√ß√£o com Zod no Cliente
    const result = LeadSchema.safeParse(dataToValidate);

    if (!result.success) {
      console.error("‚ùå Erro de Valida√ß√£o (Zod):", result.error.format()); // MOSTRA O ERRO NO CONSOLE

      result.error.issues.forEach((issue) => {
        const fieldName = issue.path[0];
        const input = form.querySelector(`[name="${fieldName}"]`);
        input?.classList.add("ring-2", "ring-red-500");
      });

      // Destrava o bot√£o para o usu√°rio tentar de novo
      btn.disabled = false;
      btn.innerText = "Solicitar Or√ßamento gratuito";
      return;
    }

    // 3. Envio para a API
    try {
      const response = await fetch("/api/leads", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(result.data),
      });

      const responseData = await response.json();

      if (!response.ok) {
        // MOSTRA ERROS VINDOS DO BACKEND/SUPABASE
        console.error("‚ùå Erro no Servidor (API):", responseData);
        throw new Error(
          responseData.message || "Erro desconhecido no servidor",
        );
      }

      console.log("‚úÖ Sucesso!", responseData);
      window.location.href = "/sucesso";
    } catch (err) {
      console.error("üö® Erro Cr√≠tico na Requisi√ß√£o:", err); // MOSTRA ERROS DE CONEX√ÉO
    } finally {
      // Sempre volta o bot√£o ao normal
      btn.disabled = false;
      btn.innerText = "Solicitar Or√ßamento gratuito";
    }
  });
</script>
